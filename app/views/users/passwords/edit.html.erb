<div class="login_back" >
  <h2 class="text-center login_heading">Forgot your password?</h2>
  <div class="login_heading_l"></div>
  <div class="login_heading_r"></div>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "login_form" }) do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field_row">
    <%= f.label :password, "New password",  class: "field_label field_label_mandatory"%><br />
    <% if @minimum_password_length %>
      <span class="password-condition">(<%= @minimum_password_length %> characters minimum)</span>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "input_login" %>
  </div>

  <div class="field_row">
    <%= f.label :password_confirmation, "Confirm new password", class: "field_label field_label_mandatory"%><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "input_login" %>
  </div>

  <div class="field_row">
    <span class="margin-left-10pr"><%= f.submit "Change my password", class: "login_button" %></span>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<%= devise_error_messages! %>
